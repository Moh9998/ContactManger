@model MyContacts.Models.User
@{
    ViewBag.Title = "Login";
}

<h1 class="row justify-content-center">@ViewBag.Title</h1>

<div class="row justify-content-center align-items-center bg-primary bg-gradient rounded-5 text-white" style="height:400px;">
    <div class="col-md-4 ">
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-warning"></div>
            <div class="form-group">
                <label class="control-label row justify-content-center m-3">Username</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label row justify-content-center m-3"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-warning"></span>
            </div>
            <div class="form-group  justify-content-center mt-4 ">
                <button type="submit" class="form-control btn btn-info text-while fw-bold">Login</button>
            </div>
            <div class="form-group mt-5">Don't Have Account??
                <a class="text-warning" asp-controller="User" asp-action="Register">Click Here</a>
                To Regiter Here
            </div>
                    
        </form>
    </div>
</div>

