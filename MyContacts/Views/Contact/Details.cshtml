@model MyContacts.Models.Contact
@{
    ViewBag.Title = "Contact Details";
}
<table class="table table-striped">
<tr>
        <th>
            First Name
        </th>
        <td>
            @Html.DisplayFor(model => model.FirstName)
        </td>
    </tr>
    <tr>
        <th>
            Last Name
        </th>
        <td>
            @Html.DisplayFor(model => model.LastName)
        </td>
    </tr>
    <tr>
        <th>
            Email
        </th>
        <td>
            @Html.DisplayFor(model => model.Email)
        </td>
    </tr>
    <tr>
        <th>
            Phone Number
        </th>
        <td>
            @Html.DisplayFor(model => model.PhoneNumber)
        </td>
    </tr>
    <tr>
        <th>
           Category
        </th>
        <td>
            @Html.DisplayFor(model => model.Category.Name)
        </td>
    </tr>
    <tr>
        <th>
            Date Added
        </th>
        <td>
           @Model.DateAdded.ToShortDateString()
        </td>
    </tr>
</table>


<a class="btn btn-primary mt-3" asp-controller="Contact" asp-action="Edit" asp-route-id="@Model.ContactId">Edit <i class="bi bi-person"></i></a>
<a class="btn btn-danger mt-3 ml-3" asp-controller="Contact" asp-action="Delete" asp-route-id="@Model.ContactId">Delete <i class="bi bi-trash-fill"></i></a>