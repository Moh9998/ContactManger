@model MyContacts.Models.Contact
@{
    ViewBag.Title = "Delete";
}
<form asp-action="delete" method="post">
    <input type="hidden" asp-for="ContactId" />
<h2>Are you sure you want to delete @Model.FirstName @Model.LastName ?</h2>
<button type="submit" class="btn btn-danger row-cols-2 mt-3 mx-lg-3">Delete <i class="bi bi-trash-fill"></i></button>
</form>


